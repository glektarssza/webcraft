{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pnpm:install",
            "detail": "Install project dependencies using pnpm.",
            "icon": {
                "id": "cloud-download",
                "color": "terminal.ansiWhite"
            },
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "dependsOrder": "sequence",
            "dependsOn": [],
            "isBackground": false,
            "promptOnClose": false,
            "type": "shell",
            "hide": false,
            "command": "pnpm -r install",
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
                "runOn": "folderOpen"
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "pnpm:lint",
            "detail": "Run ESLint on the entire project using pnpm.",
            "icon": {
                "id": "search-fuzzy",
                "color": "terminal.ansiMagenta"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "pnpm:build:types"
            ],
            "isBackground": false,
            "promptOnClose": false,
            "type": "shell",
            "hide": false,
            "command": "pnpm -r run lint",
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
                "runOn": "default"
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [
                "$eslint-compact",
                "$eslint-stylish"
            ]
        },
        {
            "label": "pnpm:build:types",
            "detail": "Build all project type definitions using pnpm and tsc.",
            "icon": {
                "id": "package",
                "color": "terminal.ansiBlue"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "pnpm:install"
            ],
            "isBackground": false,
            "promptOnClose": false,
            "type": "shell",
            "hide": false,
            "command": "pnpm -r --filter \"webcraft^...\" run build:types",
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
                "runOn": "default"
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}
