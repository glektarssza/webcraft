        {
            "label": "pnpm:test:ui",
            "detail": "Test the project in UI mode using pnpm.",
            "icon": {
                "id": "beaker",
                "color": "terminal.ansiCyan"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "hide": false,
            "isBackground": true,
            "promptOnClose": false,
            "dependsOrder": "sequence",
            "dependsOn": ["pnpm:install"],
            "type": "shell",
            "command": "pnpm run test:ui",
            "runOptions": {
                "instanceLimit": 1,
                "reevaluateOnRerun": true,
                "runOn": "default"
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                {
                    "applyTo": "allDocuments",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "RERUN\\s+(.+)",
                            "file": 1
                        },
                        "endsPattern": {
                            "regexp": "Waiting for file changes"
                        }
                    },
                    "fileLocation": "autoDetect",
                    "severity": "info",
                    "source": "vite",
                    "pattern": [
                        {
                            "regexp": "(.+):(\\d+):(\\d+):\\s+(ERROR):\\s(.+)",
                            "file": 1,
                            "line": 2,
                            "column": 3,
                            "severity": 4,
                            "message": 5
                        }
                    ]
                }
            ]
        },
