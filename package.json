{
    "name": "webcraft",
    "description": "A simple Minecraft clone built on web technologies.",
    "version": "0.0.0",
    "license": "SEE LICENSE IN LICENSE.md",
    "private": true,
    "author": {
        "name": "G'lek Tarssza",
        "email": "glek@glektarssza.com",
        "url": "https://glektarssza.com"
    },
    "homepage": "https://glektarssza.github.io/webcraft",
    "bugs": {
        "url": "https://github.com/glektarssza/webcraft/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/glektarssza/webcraft"
    },
    "type": "module",
    "scripts": {
        "prepare": "husky",
        "test": "npm run test:base",
        "test:ci": "npm run test:coverage",
        "test:coverage": "npm run test:base -- --coverage",
        "test:base": "wtr",
        "lint": "npm run lint:cache -- ./src/ ./tests/",
        "lint:ci": "npm run lint:base -- ./src/ ./tests/",
        "lint:cache": "npm run lint:base -- --cache",
        "lint:base": "eslint",
        "dev": "vite serve",
        "build": "npm run build:prod",
        "build:all": "npm run build:prod && npm run build:dev",
        "build:prod": "vite build --mode production",
        "build:dev": "vite build --mode development",
        "clean": "npm run clean:prod",
        "clean:all": "rimraf ./dist/",
        "clean:prod": "rimraf ./dist/",
        "clean:dev": "rimraf ./dist/",
        "rebuild": "npm run clean && npm run build",
        "rebuild:all": "npm run clean:all && npm run build:all",
        "rebuild:prod": "npm run clean:prod && npm run build:prod",
        "rebuild:dev": "npm run clean:dev && npm run build:dev"
    },
    "devDependencies": {
        "@faker-js/faker": "^8.4.1",
        "@remcovaes/web-test-runner-vite-plugin": "^1.2.1",
        "@rollup/plugin-replace": "^5.0.5",
        "@types/chai": "^4.3.16",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.12.11",
        "@types/sinon": "^17.0.3",
        "@typescript-eslint/eslint-plugin": "^7.8.0",
        "@typescript-eslint/parser": "^7.9.0",
        "@web/test-runner": "^0.18.2",
        "@web/test-runner-mocha": "^0.9.0",
        "@web/test-runner-puppeteer": "^0.16.0",
        "chai": "^5.1.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-tsdoc": "^0.2.17",
        "husky": "^9.0.11",
        "mocha": "^10.4.0",
        "prettier": "^3.2.5",
        "prettier-eslint": "^16.3.0",
        "rimraf": "^5.0.5",
        "sass": "^1.77.0",
        "sinon": "^17.0.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5",
        "vite": "^5.2.11"
    }
}
