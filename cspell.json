{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "id": "root",
    "name": "Root Configuration",
    "description": "Root configuration for the project.",
    "enabled": true,
    "dictionaries": [
        "!cryptocurrencies",
        "companies",
        "css",
        "en-ca",
        "en-gb",
        "filetypes",
        "fonts",
        "gaming-terms",
        "git",
        "html-symbol-entities",
        "html",
        "markdown",
        "node",
        "npm",
        "scientific-terms-gb",
        "shell",
        "software-terms",
        "typescript",
        "vim",
        "win32"
    ],
    "import": [
        "./.cspell/configs/project-dictionary.json",
        "./.cspell/configs/vscode-dictionary.json"
    ],
    "useGitignore": true,
    "gitignoreRoot": ["."],
    "ignorePaths": ["pnpm-lock.yaml"],
    "caseSensitive": false,
    "loadDefaultConfiguration": true,
    "unknownWords": "report-all",
    "readonly": true
}
